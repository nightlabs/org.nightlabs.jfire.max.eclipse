            orderHint="500"
            queryFilterFactoryClass="org.nightlabs.jfire.voucher.ui.store.search.VoucherTypeQueryFilterFactory"
            scope="global"
            targetClass="org.nightlabs.jfire.voucher.store.VoucherType"
            title="VoucherType">
