<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
              class="org.nightlabs.jfire.contact.ui.ContactPerspective"
              icon="icons/person.png"
              id="org.nightlabs.jfire.contact.ui.ContactPerspective"
              name="Contact">
        </perspective>
   </extension>
   <extension point="org.eclipse.ui.views">
        <category id="org.nightlabs.jfire.contact" name="Contact"/>
        <view
              category="org.nightlabs.jfire.contact"
              class="org.nightlabs.jfire.contact.ui.ContactView"
              icon="icons/person.png"
              id="org.nightlabs.jfire.contact.ui.ContactView"
              name="Contacts"/>
        <view
              category="org.nightlabs.jfire.contact"
              class="org.nightlabs.jfire.contact.ui.ContactDetailView"
              icon="icons/person.png"
              id="org.nightlabs.jfire.contact.ui.ContactDetailView"
              name="Details">
        </view>
    </extension>
</plugin>
