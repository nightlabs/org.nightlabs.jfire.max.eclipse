   <extension
         point="org.nightlabs.jfire.base.ui.queryFilterComposite">
      <QueryFilter
            orderHint="400"
            queryFilterFactoryClass="org.nightlabs.jfire.dynamictrade.ui.store.search.DynamicProductTypeQueryFilterFactory"
