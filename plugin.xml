<plugin>
   <extension
         point="org.eclipse.datatools.connectivity.oda.dataSource">
      <dataSource
            defaultDisplayName="JFire JDOQL Driver"
            driverClass="org.nightlabs.jfire.reporting.admin.ui.oda.jdoql.client.ClientJDOQLDriver"
            id="org.nightlabs.jfire.reporting.admin.ui.oda.jdoql.JDOQLDriver"
