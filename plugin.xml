<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.nightlabs.jfire.voucher.editor2d.VoucherEditor"
            contributorClass="org.nightlabs.jfire.scripting.editor2d.ui.ScriptingEditorActionbarContributor"
            default="true"
            extensions="v2d"
            filenames="v2d"
            icon="icons/VoucherEditor.16x16.png"
            id="org.nightlabs.jfire.voucher.editor2d.VoucherEditor"
            name="%editor.name"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.nightlabs.jfire.voucher.editor2d.VoucherEditorPerspective"
            icon="icons/VoucherEditor.16x16.png"
            id="org.nightlabs.jfire.voucher.editor2d.VoucherEditorPerspective"
            name="%perspective.name"/>
   </extension>
   <extension
         point="org.nightlabs.base.ui.editor2perspective">
      <registry
            editorID="org.nightlabs.jfire.voucher.editor2d.VoucherEditor"
            perspectiveID="org.nightlabs.jfire.voucher.editor2d.VoucherEditorPerspective"/>
   </extension>
   <extension
         point="org.nightlabs.base.ui.newfileaction">
      <action
            class="org.nightlabs.jfire.voucher.editor2d.action.NewVoucherFileAction"
            fileExtension="v2d"
            title="%action.new.text"
            tooltip="%action.new.tooltip"/>
   </extension>
   <extension
         point="org.nightlabs.base.ui.iofilter">
      <ioFilter
            class="org.nightlabs.jfire.voucher.editor2d.iofilter.VoucherXStreamFilter"
            description="%voucherIOFilter.description"
            name="%voucherIOFilter.name">
         <fileExtension
               description="%voucherIOFilter.fileextension.v2d.description"
               fileExtension="v2d"/>
      </ioFilter>
   </extension>
   <extension
         point="org.nightlabs.editor2d.ui.documentProperties">
      <documentProperties
            editorClass="org.nightlabs.jfire.voucher.editor2d.VoucherEditor"
            editorID="org.nightlabs.jfire.voucher.editor2d.VoucherEditor"
            orientation="vertical"
            predefinedPageID="A4"
            resolution="300"
            resolutionUnit="org.nightlabs.i18n.unit.resolution.DPIResolutionUnit"/>
   </extension>

</plugin>
