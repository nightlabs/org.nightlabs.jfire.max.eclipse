<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.nightlabs.jfire.eclipse.platform.max.product</artifactId>
	<packaging>eclipse-repository</packaging>

	<parent>
		<version>1.3.0-SNAPSHOT</version>
		<groupId>org.nightlabs.jfire.eclipse.platform</groupId>
		<artifactId>org.nightlabs.jfire.eclipse.platform.parent</artifactId>
		<relativePath>../org.nightlabs.jfire.eclipse.platform.parent</relativePath>
	</parent>
	
	<repositories>
		<repository>
			<id>birt</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/birt/update-site/2.6</url>
		</repository>
	</repositories>		

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<version>${tycho-version}</version>
 				<configuration>
					<installFeatures>false</installFeatures>				
			        <products>
			          <product>
			            <id>org.nightlabs.jfire.eclipse.platform.max.product</id>
			          </product>
			        </products>
        		</configuration>				
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
					<execution>
						<id>archive-products</id>
						<goals>
							<goal>archive-products</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
