<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.nightlabs.jfire.eclipse</groupId>
		<artifactId>org.nightlabs.jfire.eclipse.max.assembly.parent</artifactId>
		<version>1.3.0-SNAPSHOT</version>
		<relativePath>../org.nightlabs.jfire.eclipse.max.assembly.parent</relativePath>
	</parent>
	
	<artifactId>org.nightlabs.jfire.eclipse.max.assembly.linux-gtk-x86_64</artifactId>
	<packaging>pom</packaging>
	<name>${project.artifactId}</name>

	<properties>
		<jfire.eclipse.assembly.artifactId>org.nightlabs.jfire.eclipse.min.assembly.linux-gtk-x86_64</jfire.eclipse.assembly.artifactId>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.nightlabs.jfire.eclipse</groupId>
			<artifactId>org.nightlabs.jfire.eclipse.min.assembly.linux-gtk-x86_64</artifactId>
			<version>${project.version}</version>
			<type>tar.gz</type>
			<classifier>bin</classifier>
		</dependency>
	</dependencies>

	<!-- FIXME: This can be removed when http://jira.codehaus.org/browse/MNG-5127 
		is resolved. Then the parent-profile 'build-assembly' would have been activated 
		and plugins would have been executed by default -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>