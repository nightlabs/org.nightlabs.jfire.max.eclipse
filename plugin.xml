<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="scriptRegistryItemAction" name="ScriptRegistryItemAction Extension-Point" schema="schema/scriptRegistryItemAction.exsd"/>
   <extension-point id="scriptParameterSetAction" name="ScriptParameterSetAction Extension-Point" schema="schema/scriptParameterSetAction.exsd"/>
   <extension-point id="scriptEditor" name="ScriptEditor ExtensionPoint" schema="schema/scriptEditor.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.nightlabs.jfire.scripting.admin.viewCategory"
            class="org.nightlabs.jfire.scripting.admin.script.ScriptView"
            icon="icons/ScriptView.16x16.png"
            id="org.nightlabs.jfire.scripting.admin.script.ScriptView"
            name="Scripts"/>
      <category
            id="org.nightlabs.jfire.scripting.admin.viewCategory"
            name="JFireScripting"/>
      <view
            category="org.nightlabs.jfire.scripting.admin.viewCategory"
            class="org.nightlabs.jfire.scripting.admin.parameter.ParameterView"
            icon="icons/ScriptView.16x16.png"
            id="org.nightlabs.jfire.scripting.admin.parameter.ParameterView"
            name="Parameter View"/>
   </extension>
   <extension
         point="org.nightlabs.jfire.scripting.admin.scriptRegistryItemAction">
      <separator name="additions"/>
      <scriptRegistryItemAction
            class="org.nightlabs.jfire.scripting.admin.script.action.add.AddScriptCategoryAction"
            contextmenuPath="additions"
            icon="icons/script/action/add/AddScriptCategoryAction.16x16.png"
            id="org.nightlabs.jfire.scripting.admin.script.action.add.AddScriptCategoryAction"
            name="AddScriptCategoryAction"
            toolbarPath="additions"
            tooltip="Add a new ScriptCategory"/>
      <scriptRegistryItemAction
            class="org.nightlabs.jfire.scripting.admin.script.action.add.AddScriptAction"
            contextmenuPath="additions"
            icon="icons/script/action/add/AddScriptAction.16x16.png"
            id="org.nightlabs.jfire.scripting.admin.script.action.add.AddScriptAction"
            name="AddScriptAction"
            toolbarPath="additions"
            tooltip="Add a new Script"/>
      <scriptRegistryItemAction
            class="org.nightlabs.jfire.scripting.admin.script.action.edit.EditScriptAction"
            contextmenuPath="additions"
            icon="icons/script/action/edit/EditScriptAction.16x16.png"
            id="org.nightlabs.jfire.scripting.admin.script.action.edit.EditScriptAction"
            name="EditScriptAction"
            toolbarPath="additions"
            tooltip="Edit Script"/>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.nightlabs.jfire.scripting.admin.script.jscript.ScriptingJSEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="false"
            icon="icons/editor/ScriptingJSEditor.16x16.png"
            id="org.nightlabs.jfire.scripting.admin.script.jscript.ScriptingJSEditor"
            name="ScriptingJSEditor"/>
   </extension>
   <extension
         point="org.nightlabs.jfire.scripting.admin.scriptEditor">
      <scriptEditor
            editorID="org.nightlabs.jfire.scripting.admin.script.jscript.ScriptingJSEditor"
            scriptLanguage="JavaScript"/>
   </extension>
   <extension
         point="org.nightlabs.jfire.scripting.admin.scriptParameterSetAction">
      <separator
            name="additions"
            />
      <scriptParameterSetAction
            class="org.nightlabs.jfire.scripting.admin.parameter.action.add.AddScriptParameterSetAction"
            contextmenuPath="additions"
            icon="icons/parameter/action/add/AddScriptParameterSetAction.16x16.png"
            id="org.nightlabs.jfire.scripting.admin.parameter.action.add.AddScriptParameterSetAction"
            name="Add ScriptParameterSet"
            toolbarPath="additions"
            tooltip="Add a new parameter set"/>
   </extension>

</plugin>
