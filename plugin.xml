<?xml version="1.0" encoding="UTF-8"?>
<plugin>
	<extension-point id="issueOverview" name="Issue overview" schema="schema/overview.exsd"/>
    <extension 
   		point="org.eclipse.ui.perspectives">
   		<perspective
    		class="org.nightlabs.jfire.issuetracking.ui.issue.IssuePerspective"
    		id="org.nightlabs.jfire.issuetracking.ui.issue.IssuePerspective" name="Issue Tracking"/>
    </extension>
    
    <extension 
    	point="org.eclipse.ui.views">
    	<category
    		id="org.nightlabs.jfire.issuetracking" name="Issue"/>
		<view 
			category="org.nightlabs.jfire.issuetracking"
            class="org.nightlabs.jfire.issuetracking.ui.overview.IssueOverviewView"
            icon="icons/IssuePerspective.16x16.png"
            id="org.nightlabs.jfire.issuetracking.ui.overview.IssueOverviewView" name="Issue View"/>
    </extension>

	<extension
         point="org.nightlabs.jfire.issuetracking.ui.issueOverview">
      <categoryFactory
            categoryID="org.nightlabs.jfire.issuetracking.ui.overview"
            index="0"
            name="Issue">
      </categoryFactory>
      <entryFactory
            categoryEntryID="org.nightlabs.jfire.issuetracking.ui.overview.issueList"
            categoryID="org.nightlabs.jfire.issuetracking.ui.overview"
            class="org.nightlabs.jfire.issuetracking.ui.overview.IssueEntryListFactory"
            icon="icons/overview/issue/IssueOverviewPerspective.16x16.png"
            index="0"
            name="Issue List">
      </entryFactory>
   </extension>
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
        	class="org.nightlabs.jfire.issuetracking.ui.overview.IssueEntryListEditor"
            default="false"
            contributorClass="org.nightlabs.base.ui.action.registry.editor.XEditorActionBarContributor"
            icon="icons/articlecontainer/detail/deliverynote/GeneralEditorInputDeliveryNote.16x16.png"
            id="org.nightlabs.jfire.issuetracking.ui.overview.IssueEntryListEditor"
            name="Issue Entry List">
      </editor>
      <editor
        	class="org.nightlabs.jfire.issuetracking.ui.issue.IssueEditor"
            default="false"
            contributorClass="org.nightlabs.base.ui.action.registry.editor.XEditorActionBarContributor"
            icon="icons/issue/editor/IssueEdit.16x16.png"
            id="org.nightlabs.jfire.issuetracking.ui.issue.IssueEditor"
            name="Issue Editor">
      </editor>
   </extension>
   
   <extension point="org.nightlabs.base.ui.entityEditor">
		<pageFactory
			class="org.nightlabs.jfire.issuetracking.ui.issue.IssueEditorPage$Factory"
			editorID="org.nightlabs.jfire.issuetracking.ui.issue.IssueEditor"
			indexHint="10" />
   </extension>  
  
  <extension point="org.nightlabs.base.ui.editorActionBarContribution">
      <editorActionBarContributionRegistry
            targetEditorID="org.nightlabs.jfire.issuetracking.ui.overview.IssueEntryListEditor">
         <editorActionBarContribution
               class="org.nightlabs.jfire.base.ui.overview.search.ApplySearchAction"
               id="org.nightlabs.jfire.base.ui.overview.search.ApplySearchAction"
               name="%overview.action.search.name"
               toolbarPath="org.nightlabs.jfire.issuetracking.ui.overview"
               tooltip="%overview.action.search.tooltip">
         </editorActionBarContribution>
         <editorActionBarContribution
               class="org.nightlabs.jfire.issuetracking.ui.issue.action.AddIssueAction"
               icon="icons/issue/action/AddIssueAction.16x16.png"
               id="org.nightlabs.jfire.issuetracking.ui.issue.action.AddIssueAction"
               name="Add Account"
               toolbarPath="org.nightlabs.jfire.issuetracking.ui.overview">
         </editorActionBarContribution>
         <groupMarker
               name="org.nightlabs.jfire.issuetracking.ui.overview">
         </groupMarker>         
      </editorActionBarContributionRegistry>
   </extension>
</plugin>
